<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.converter.controller.ConverterController">
  <children>
    <!-- Título de la aplicación -->
    <Label text="CONVERSOR DE UNIDADES">
      <font>
        <Font name="System Bold" size="24.0" />
      </font>
      <VBox.margin>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
    </Label>

    <!-- Panel principal de conversión -->
    <GridPane hgap="10.0" vgap="15.0">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="250.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES" />
      </rowConstraints>

      <!-- Tipo de conversión -->
      <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
      </Label>
      <ComboBox fx:id="typeComboBox" maxWidth="1.7976931348623157E308" prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <!-- Valor a convertir -->
      <Label text="Valor:" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
      </Label>
      <TextField fx:id="inputField" prefHeight="30.0" promptText="Ingresa el valor a convertir" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <!-- Unidad de origen -->
      <Label text="De:" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
      </Label>
      <ComboBox fx:id="fromUnitComboBox" maxWidth="1.7976931348623157E308" prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

      <!-- Unidad de destino -->
      <Label text="A:" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
      </Label>
      <ComboBox fx:id="toUnitComboBox" maxWidth="1.7976931348623157E308" prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

      <!-- Resultado -->
      <Label text="Resultado:" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
      </Label>
      <TextField fx:id="resultField" editable="false" prefHeight="30.0" promptText="Resultado de la conversión" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
      </TextField>

      <!-- Botones -->
      <HBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button fx:id="convertButton" prefHeight="35.0" prefWidth="120.0" text="CONVERTIR">
          <font>
            <Font name="System Bold" size="14.0" />
          </font>
        </Button>
        <Button fx:id="clearButton" prefHeight="35.0" prefWidth="100.0" text="LIMPIAR">
          <font>
            <Font name="System Bold" size="12.0" />
          </font>
        </Button>
      </HBox>

      <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
      </padding>
    </GridPane>

    <!-- Separador -->
    <Separator>
      <VBox.margin>
        <Insets left="20.0" right="20.0" />
      </VBox.margin>
    </Separator>

    <!-- Historial -->
    <VBox>
      <Label text="HISTORIAL DE CONVERSIONES">
        <font>
          <Font name="System Bold" size="16.0" />
        </font>
        <VBox.margin>
          <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
      </Label>

      <TextArea fx:id="historyTextArea" editable="false" prefHeight="200.0">
        <font>
          <Font name="Consolas" size="12.0" />
        </font>
        <VBox.margin>
          <Insets bottom="20.0" left="20.0" right="20.0" />
        </VBox.margin>
      </TextArea>
    </VBox>
  </children>
</VBox>